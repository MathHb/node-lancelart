<%- contentFor('hero') %>
<div class="jumbotron text-center">
  <h1>Cadastro</h1>



<%include ../partials/messages%>

<%- contentFor('body') %>
  <div class=" h-100 row align-items-center">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Fa√ßa sua conta!</h2>
      <form action="/cadastro" method="POST">
        <div class="form-group">
          <label>Nome</label>
          <input type="text" name="nome" class="form-control">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="text" name="email" class="form-control">
        </div>
        <div class="form-group">
          <label>Login</label>
          <input type="text" name="login" class="form-control">
        </div>
        <div class="form-group">
          <label>Senha</label>
          <input type="password" name="senha" class="form-control">
        </div>
         <div class="form-group">
          <label>Senha novamente</label>
          <input type="password" name="senha2" class="form-control">
        </div>
        <div class="form-group">
          <input type="radio" name="contaTp" value="0" checked="true"><label>Artista</label>
          <input type="radio" name="contaTp" value="1"><label>Contratador</label>
        </div>
        <div class="form-group">
          <input type="checkbox" name="area" value="Desenho Digital 2D"><label>Desenho Digital 2D</label>
          <input type="checkbox" name="area" value="Desenho Digital 3D"><label>Desenho Digital 3D</label>
          <input type="checkbox" name="area" value="Desenho Tradicional"><label>Desenho Tradicional</label>
          <input type="checkbox" name="area" value="Modelagem"><label>Modelagem</label>
          <input type="checkbox" name="area" value="Fotografia"><label>Fotografia</label>
          <input type="checkbox" name="area" value="Colagem"><label>Colagem</label>
          <input type="checkbox" name="area" value="Escultura"><label>Escultura</label>
        </div>
        <div class="form-group text-right">
          <button type="submit" class="btn btn-primary btn-lg">Criar conta!</button>
        </div>

      </form>
    </div>
  </div>
</div>

